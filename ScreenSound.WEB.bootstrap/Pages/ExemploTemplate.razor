@page "/exemplo-template"

<TableTemplate RowType="Pessoa" RowData="pessoas">
    <Header>
        <tr>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Pais</th>
            <th>Fone</th>
        </tr>
    </Header>
    <RowTemplate>
        <td>@context.Nome</td>
        <td>@context.Cidade</td>
        <td>@context.Pais</td>
        <td>@context.Fone</td>
    </RowTemplate>
</TableTemplate>

@code {
    private List<Pessoa> pessoas = new List<Pessoa>
    {
        new Pessoa { Nome = "Ana", Cidade = "São Paulo", Pais = "Brasil", Fone = "(11) 1234-5678" },
        new Pessoa { Nome = "Carlos", Cidade = "Rio de Janeiro", Pais = "Brasil", Fone = "(21) 8765-4321" },
        new Pessoa { Nome = "Beatriz", Cidade = "Curitiba", Pais = "Brasil", Fone = "(41) 1122-3344" }
    };

    public class Pessoa
    {
        public string? Nome { get; set; }
        public string? Cidade { get; set; }
        public string? Pais { get; set; }
        public string? Fone { get; set; }
    }
}

